<h1>Edit Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <label for="name"></label>
    <input type="text" id="name" name="recipe[name]" value="<%= @recipe.name %>" />

    <label for="ingredients"></label>
    <input type="text" id="ingredients" name="recipe[ingredients]" value="<%= @recipe.ingredients %>" />

    <label for="cook_time"></label>
    <input type="text" id="cook_time" name="recipe[cook_time]" value="<%= @recipe.cook_time %>" />

    <input type="hidden" name="_method" value="PATCH" />
    <input type="submit" id="submit" value="edit" />
</form>